<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayoutProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgBike"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_cycling"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtBikeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xe đạp nữ VeloGo"
                android:textSize="16sp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/txtIdUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID user: 0"
                android:textSize="16sp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng giá: 20.000đ/h"
                android:textSize="16sp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thuê: 12/12/2024"
                android:textSize="16sp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/txtEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày trả: 12/12/2024"
                android:textSize="16sp"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>